{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "typeRoots": [
      "type-declarations"
    ],
    "declaration": true,
    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}